.posts-wrapper.row
  .post
    .post-head
      .name
        Yev
    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.description
      =@post.description
    .text-center.edit-links
      = link_to "Cancel", posts_path
      |
      = link_to "Edit Post", edit_post_path(@post)
    %h3 Comments:
    - if @post.comments.any?
      %ul
        - @post.comments.each do |comment|
          %li
            = comment.thoughts
    - else
      %p No comments.
