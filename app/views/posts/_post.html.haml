.posts-wrapper
  .post
    .post-head
      .username
        = post.user.username
      .time-ago
        = timeago_tag post.created_at, nojs: true, force: true
    .image.center-block
      = link_to (image_tag post.image.url(:medium), class: 'img-responsive'), post_path(post)
    .post-bottom
      .description
        .description-content
          .username
            = post.user.username
          = post.description
        .comments{ id: "comments_#{post.id}" }
          - if post.comments
            = render post.comments, post: post
    .comment-like-form.row
      .col-sm-1
        = link_to '', like_post_path(post.id),
                      remote: true,
                      id: "like_#{post.id}",
                      class: 'glyphicon glyphicon-heart-empty'
      .comment-form.col-sm-11
        = form_for([post, post.comments.build], remote: true) do |f|
          = f.text_field :thoughts, placeholder: 'Add a comment...',
                                    class: "comment_content",
                                    id: "comment_content_#{post.id}"
          = f.submit 'New comment', class: 'comment-submit-button'
