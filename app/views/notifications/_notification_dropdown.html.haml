.dropdown
  %button.dropdown-toggle{ type: 'button',
                           id: 'dropdownMenu1',
                           data: { toggle: 'dropdown' },
                           'aria-haspopup': true,
                           'aria-expanded': true }
    = link_to (image_tag 'icon-notifications.png', alt: 'Notifications'),
               '#',
               class: 'user-block-link',
               id: 'notifications'
    = render 'notifications/counter', counter: current_user.notifications.unread.count
  .triangle-with-shadow
  .dropdown-menu{ 'aria-labelledby': 'dropdownMenu1' }
    - if current_user.notifications.any?
      .dropdown-menu__content
        %ul.notification__list
          = render current_user.notifications.most_recent
      .dropdown-menu__bottom
        = link_to t('notifications.dropdown-menu.link'), notifications_path
    - else
      .dropdown-menu__head
        = t('notifications.dropdown-menu.header')
      .dropdown-menu__content
        = t('notifications.dropdown-menu.empty')
