.posts-wrapper
  .row
    .col-md-6
      .img-circle
        = profile_avatar_select(@user)
    .col-md-6
      %h3
        = @user.username
      %span
        - if @user == current_user
          = link_to 'Edit Profile', edit_profile_path(@user.username),
                                    class: 'btn edit-button'
      %p
        = @user.bio
      %p
        = pluralize @user.posts.count, 'post'
- @posts.each do |post|
  = render 'posts/post', post: post
