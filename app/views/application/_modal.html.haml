.modal#modalOptions{ 'aria-labelledby': 'modalOptionsLabel',
                     role: 'dialog',
                     tabindex: '-1',
                     'data-backdrop': 'true',
                     'data-keyboard': 'true' }
  .modal-dialog{ role: 'document' }
    .modal-content
      %ul.options-list
        %li.options-item
          = link_to t('application.modal.create_post'),
                    new_post_path,
                    class: 'options-link'
        %li.options-item
          = link_to t('application.modal.logout'),
                    destroy_user_session_path,
                    class: 'options-link',
                    method: :delete
        %li.options-item
          = button_tag t('application.modal.cancel'),
                       type: 'button',
                       'data-dismiss': 'modal',
                       class: 'options-link'
